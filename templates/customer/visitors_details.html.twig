{% extends "base.html.twig" %}

{% block title %}
    Identification des visiteurs
{% endblock %}


{% block body %}
    <div class="jumbotron">
        <h2>Saisissez le détail pour chaque visiteur</h2>
    </div>

    <div class="table-responsive-lg">
        <table class="table">

            {{ form_start(form) }}
            {{ form_errors(form) }}

            {% for fticket in form.tickets %}
                <strong>Ticket n° {{ loop.index }}</strong>
                {{ form_widget(fticket) }}
                <hr>
            {% endfor %}

            <input type="submit" class="btn btn btn-primary" value="Valider">
            {{ form_end(form) }}

        </table>
    </div>

{% endblock %}